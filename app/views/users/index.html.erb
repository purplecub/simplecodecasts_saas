
<h1 class="text-center">DevMatch Community</h1>
<p class="text-center">Welcome to the DevMatch community. Users must fill out a profile to be visible in the community.</p>
<div class="row">
    <div class="col-md-4">
        <div class="well">
            <h3 class="text-center">Developers</h3>
            <!--<h4 class="text-center">Featured Developer:</h4>-->
            
            <% @users.each do |user| %>
                <% if user.profile %>
                    <% if user.profile.avatar %>
                        <% if user.profile.job_title == "Developer" %>
                            <div class="row well user-background-box">
                                <div class="col-sm-4 text-center">
                                    <%= link_to user do %>
                                        <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                                    <% end %>
                                </div>
                                <div class="col-sm-8">
                                    <%= link_to user do %>
                                        <h4> <%= user.profile.first_name %> <%= user.profile.last_name %></h4>
                                        <% if user.plan_id == 2 %>
                                            <span class="label label-success">PRO</span>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
